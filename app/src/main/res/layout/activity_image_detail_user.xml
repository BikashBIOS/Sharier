<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ImageHandlerPages.ImageDetailUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="10dp"
            android:text="Title"
            android:id="@+id/imgTitle"
            android:textSize="24dp"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:textColor="@color/gradient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/detailImageView"
            android:layout_below="@id/imgTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="500dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Shareable Link and Download Image Here:"
            android:textColor="@color/gradient"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Shareable Link"
            android:autoLink="all"
            android:clickable="true"
            android:id="@+id/downloadlink"
            android:gravity="center"/>

        <!--<Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="Save to Gallery"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:fontFamily="monospace"
            android:layout_marginTop="10dp"
            android:onClick="savetoGallery"/>-->

        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@id/detailImageView"
            android:text="Description"
            android:textSize="15dp"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imgDetails"/>

    </LinearLayout>

</ScrollView>